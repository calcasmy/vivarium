{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach to Orchestrator (sudo)",
            "type": "debugpy",
            "request": "attach",
            "justMyCode": false,
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "preLaunchTask": "Launch Orchestrator (sudo)"
        },
        {
            "name": "Python: Debug Light Controller (ON)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/terrarium/src/controllers/light_controller.py",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": true,
            "env": {},
            "python": "${workspaceFolder}/.vivaenv/bin/python",
            "args": ["on"]
        },
        {
            "name": "Python: Debug Light Controller (OFF)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/terrarium/src/controllers/light_controller.py",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": true,
            "env": {},
            "python": "${workspaceFolder}/.vivaenv/bin/python",
            "args": ["off"]
        },
        {
            "name": "Python: Debug Mister Controller (Manual Run)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/terrarium/src/controllers/mister_controller.py",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/.vivaenv/bin/python",
            "args": ["run", "--duration", "5"]
        },
        {
            "name": "Python: Debug Mister Controller (Auto Check)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/terrarium/src/controllers/mister_controller.py",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/.vivaenv/bin/python",
            "args": ["auto", "--humidity", "40.5"]
        },
        {
            "name": "Python: Debug Mister Controller (Manual ON/OFF)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/terrarium/src/controllers/mister_controller.py",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/.vivaenv/bin/python",
            "args": ["on"]
        },
        {
            "name": "Python: Debug Humidifier (Auto)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/terrarium/src/controllers/humidifier_controller.py",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/.vivaenv/bin/python",
            "args": ["auto"]
        },
        {
            "name": "Python: Debug Humidifier (Manual ON)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/terrarium/src/controllers/humidifier_controller.py",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/.vivaenv/bin/python",
            "args": ["on"]
        },
        {
            "name": "Python: Debug Humidifier (Manual OFF)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/terrarium/src/controllers/humidifier_controller.py",
            "console": "integratedTerminal",
            "sudo": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/.vivaenv/bin/python",
            "args": ["off"]
        }
    ]
}